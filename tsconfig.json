{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "esnext",                                
    "rootDir": "src",                                  
    "moduleResolution": "node",                        
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js"
  }
}
